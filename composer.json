{
	"name": "e2d2-dev/laravel-fqn-settings",
    "description": "Synced Key => value settings between database and classes.",
    "license": "MIT",
    "require": {
        "php": ">=8.2",
        "nette/php-generator": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.5",
        "pestphp/pest": "^3.8",
        "pestphp/pest-plugin-laravel": "^v3.2.0"
    },
    "autoload": {
		"psr-4": {
			"Betta\\Settings\\": "src/",
			"Betta\\Settings\\Tests\\": "tests/",
			"Betta\\Settings\\Database\\Seeders\\": "database/seeders/"
		}
	},
	"minimum-stability": "stable",
	"scripts": {
		"test": "pest"
	},
	"extra": {
		"laravel": {
			"providers": [
                "Betta\\Settings\\Providers\\FqnSettingsServiceProvider"
			]
		}
	}
}
